<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="error">
      <% if(validationErrors) { %>
        <ul>
          <% for(var i = 0; i < validationErrors.length; i++) { %>
            <li> <%= validationErrors[i].param; %> - <%= validationErrors[i].msg; %> </li>
          <% } %>
        </ul>
      <% } %>
    </div>
    <form class="" action="/produtos" method="post">
      <div class="row">
        <div class="col-md-6">
          <label for="titulo"> Título do Livro </label>
          <input type="text" name="titulo" id="titulo" value="<% produto.titulo %>" placeholder="Informe o título do livro">
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <label for="preco"> Preço do Livro </label>
          <input type="text" name="preco" id="preco" value="<% produto.preco %>" placeholder="150.25">
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <label for="descricao"> Descrição do Livro </label>
          <textarea cols="20" rows="10" name="descricao" id="descricao" value="<% produto.descricao %>" placeholder="Descreva sobre o livro"></textarea>
        </div>
      </div>
      <input type="submit" name="" value="Gravar">
    </form>
  </body>
</html>
